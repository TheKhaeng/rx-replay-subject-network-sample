<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="th.co.thekhaeng.replaysubjecttest.MainActivity">

    <Button
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_tv_1"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_response_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result1"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_tv_2"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_response_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result2"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_tv_3"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_response_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result3"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_tv_4"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_response_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result4"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
